@page "/products"
@using Microsoft.Extensions.Configuration
@inject IProductEndpoint ProductEndpoint
@inject IConfiguration config
@attribute [Authorize(Roles ="Cashier")]

<h3>Products</h3>

@if (products is null)
{
    <div class="row">
        <p>no produtc have been loaded.</p>
    </div>
    <div class="container-fluid">
        <div class="row">
            @for (var i = 0; i < 7; i++)
            {
                <div class="col-xl-4 col-lg-6 mb-3">
                    <div class="container">
                        <div class="row">
                            <div class="col-12">
                                <a href="">
                                    <img src="https://dummyimage.com/1200x900/000/fff" class="img-fluid" alt="placeholder image" />
                                </a>
                                <p class="my-2 text-justify">
                                    a placeholder coś tam layaut full page.
                                </p>
                                <p class="mb-1">
                                    <strong>Quantity: </strong>0
                                </p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <p class="h4 mb-3">Sample item - 0.00pln</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <div class="container-fluid">
        <div class="row">
            @foreach (ProductModel product in products)
            {
                <div class="col-xl-4 col-lg-6 mb-3">
                    <div class="container">
                        <div class="row">
                            <div class="col-12">
                                <a href="">
                                    @if (string.IsNullOrWhiteSpace(product.ProductImage))
                                   {
                                    <img src="https://dummyimage.com/200x100/000/fff&text=commingSoon" alt="placeholder image" />
                                   }
                                    else
                                    {
                                    <img src="@($"{api}{product.ProductImage}")" class="img-fluid" alt="placeholder image" />
                                    }
                                </a>
                                <p class="my-2 text-justify">
                                    @product.Description
                                </p>
                                <p class="mb-1">
                                    <strong>Quantity: </strong>@product.QuantityInStock
                                </p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <p class="h5 mb-3">@product.ProductName - $@product.RetailPrice</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}





@code {
    private List<ProductModel> products;
    private string api;
    protected override async Task OnInitializedAsync()
    {
        api = config.GetValue<string>("api");
        products = await ProductEndpoint.GetAll();
    }
}
